<div class="mt-4">
    <form method="POST" action="/products/store">
        <h2>Add new product</h2>
        <div class="mb-3">
            <label for="name" class="form-label">Product Name</label>
            <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Input here..."
                name="name"
            />
        </div>
        <div class="mb-3">
            <label for="type" class="form-label">Type</label>
            <input
                type="text"
                class="form-control"
                id="type"
                placeholder="Input here..."
                name="type"
            />
        </div>
        {{! <div class="mb-3">
            <label for="formFileSm" class="form-label">Product Image</label>
            <input
                class="form-control form-control-sm"
                id="formFileSm"
                type="file"
                name="image"
            />
        </div> }}
        <div class="mb-3">
            <label for="videoId" class="form-label">Video Id</label>
            <input
                type="text"
                class="form-control"
                id="videoId"
                placeholder="Input here..."
                name="videoId"
            />
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Amount</label>
            <input
                type="text"
                name="price"
                id="price"
                pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$"
                value=""
                data-type="currency"
                placeholder="$1,000,000.00"
            />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Add</button>
        </div>
    </form>
</div>